{
    "title": "JSON schema for Local EGA dataset mapping message interface",
    "$id": "https://github.com/EGA-archive/LocalEGA/tree/master/schemas/dataset-mapping.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "type",
        "dataset_id",
        "accession_ids"
    ],
    "additionalProperties": true,
    "properties": {
        "type": {
            "$id": "#/properties/type",
            "type": "string",
            "title": "The message type",
            "description": "The message type",
            "const": "mapping"
        },
        "dataset_id": {
            "$id": "#/properties/dataset_id",
            "type": "string",
            "title": "The Accession identifier for the dataset",
            "description": "The Accession identifier for the dataset",
            "pattern": "^.*$",
            "examples": [
                "EGAD12345678901",
                "anyidentifier"
            ]
        },
        "accession_ids": {
            "$id": "#/properties/accession_ids",
            "type": "array",
            "title": "The file stable ids in that dataset",
            "description": "The file stable ids in that dataset",
            "examples": [
                [
                    "EGAF12345678901",
                    "EGAF12345678902",
                    "EGAF12345678903",
                    "anyidentifier"
                ]
            ],
            "additionalItems": false,
            "items": {
                "type": "string",
                "pattern": "^.*$"
            }
        }
    }
}